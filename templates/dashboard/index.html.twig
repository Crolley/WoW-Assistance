{% extends 'base.html.twig' %}

{% block title %}Dashboard
{% endblock %}

{% block body %}
	<h1>Bienvenue
		{{ character.nameCharacter }}</h1>

	{% if character.guild %}
		<h2>Guilde :
			{{ character.guild.name }}</h2>
	{% else %}
		<h2>Pas de guilde</h2>
		<a href="#">🔍 Rejoindre une guilde</a>
	{% endif %}


	<div style="padding: 1rem; background: #eee; border-radius: 8px;">
		<h2>Tableau de bord</h2>
		<ul>
			<li>
				<a href="{{path('app_guild_index')}}">Gérer ma guilde</a>
			</li>
			<li>
				<a href="{{path('app_guild_members')}}">Membres de la guilde</a>

			</li>
			<li>
				<a href="{{ path('app_guild_events') }}">Voir les événements</a>
			</li>
			<li>
				<a href="#">Voir les loots</a>
			</li>
			<li>
				<a href="#">Requêtes de raid</a>
			</li>
			<li>
				<form action="/logout" method="post">
					<button type="submit">Se déconnecter</button>
				</form>
			</li>

		</li>

	</ul>
</div>{% endblock %}
