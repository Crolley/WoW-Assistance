{% extends 'base.html.twig' %}

{% block title %}√âv√©nements de la guilde{% endblock %}

{% block body %}
<h1>√âv√©nements de la guilde {{ character.guild.name }}</h1>

{% if events is empty %}
    <p>Aucun √©v√©nement √† venir.</p>
{% else %}
    <ul style="padding-left: 0;">
        {% for event in events %}
            <li style="margin-bottom: 2rem; list-style: none;">
                <div style="border: 1px solid rgba(79, 195, 247, 0.3); padding: 1rem; border-radius: 8px; background-color: rgba(255, 255, 255, 0.05);">
                    <h2 style="margin-top: 0;">{{ event.title }}</h2>
                    <p><strong>Date :</strong> {{ event.date|date('d/m/Y H:i') }}</p>
                    <p>{{ event.description }}</p>

                    {% if character.role in ['GM', 'RL', 'Officier'] %}
                        <a href="{{ path('app_event_edit', { id: event.id }) }}" class="btn btn-primary">‚úèÔ∏è Modifier</a>
                    {% endif %}

                    {% set participation = event.getParticipationFor(character) %}
                    {% if participation %}
                        <p><strong>Statut :</strong> {{ participation.status|capitalize }}</p>
                    {% else %}
                        <form method="post" action="{{ path('api_event_participation', { id: event.id }) }}" style="margin-top: 10px;">
                            <button name="status" value="accepted" class="btn btn-success">‚úÖ Participer</button>
                            <button name="status" value="declined" class="btn btn-danger">‚ùå Refuser</button>
                        </form>
                    {% endif %}

                    <button type="button" class="btn btn-secondary" style="margin-top: 10px;" onclick="toggleResponses({{ event.id }})">üë• Voir les r√©ponses</button>

                    <div id="responses-{{ event.id }}" style="display: none; margin-top: 10px; padding-left: 15px;">
                        <strong>‚úÖ Accept√©s :</strong>
                        <ul>
                            {% set hasAccepted = false %}
                            {% for p in event.participations %}
                                {% if p.status == 'accepted' %}
                                    {% set hasAccepted = true %}
                                    <li>{{ p.character.nameCharacter }}</li>
                                {% endif %}
                            {% endfor %}
                            {% if not hasAccepted %}
                                <li><em>Aucun participant pour l‚Äôinstant.</em></li>
                            {% endif %}
                        </ul>

                        <strong>‚ùå Refus√©s :</strong>
                        <ul>
                            {% set hasDeclined = false %}
                            {% for p in event.participations %}
                                {% if p.status == 'declined' %}
                                    {% set hasDeclined = true %}
                                    <li>{{ p.character.nameCharacter }}</li>
                                {% endif %}
                            {% endfor %}
                            {% if not hasDeclined %}
                                <li><em>Aucun refus enregistr√©.</em></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </li>
        {% endfor %}
    </ul>
{% endif %}

{% if character.role in ['GM', 'RL', 'Officier'] %}
    <a href="{{ path('app_event_new') }}" class="btn btn-primary">‚ûï Cr√©er un √©v√©nement</a>
{% endif %}

<p style="margin-top: 2rem;">
    <a href="{{ path('app_dashboard') }}" class="btn btn-secondary">‚Üê Retour au dashboard</a>
</p>

<script>
    function toggleResponses(eventId) {
        const el = document.getElementById('responses-' + eventId);
        el.style.display = el.style.display === 'none' ? 'block' : 'none';
    }
</script>
{% endblock %}
