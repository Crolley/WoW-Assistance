{% extends 'base.html.twig' %}

{% block title %}Membres de la guilde{% endblock %}

{% block body %}
<h1>Membres de {{ guild.name }}</h1>

{% set role_order = {
    'GM': 1,
    'RL': 2,
    'Officier': 3,
    'Raider': 4,
    'Membre': 5,
    'apply': 6
} %}

{% set sorted_members = members|sort((a, b) => role_order[a.role]|default(999) <=> role_order[b.role]|default(999)) %}
{% set roles = constant('App\\Entity\\Character::ROLES') %}
{% set allowed_roles = ['GM', 'RL', 'Officier'] %}

<ul>
    {% for member in sorted_members %}
        <li>
            {{ member.nameCharacter }} ‚Äî {{ member.classe.name }} / {{ member.specialisation.name }} ‚Äî R√¥le :

            {% if character.role in allowed_roles %}
                <select class="role-select" data-member-id="{{ member.id }}">
                    {% for key, value in roles %}
                        <option value="{{ value }}" {% if value == member.role %}selected{% endif %}>{{ key }}</option>
                    {% endfor %}
                </select>
            {% else %}
                {{ member.role }}
            {% endif %}

            {% if character.role in allowed_roles %}
                <button type="button" onclick="toggleLootForm({{ member.id }})">üéÅ Ajouter un loot</button>
                <div id="loot-form-{{ member.id }}" style="display: none; margin-top: 5px;">
                    <form method="post" action="{{ path('app_loot_add') }}">
                        <input type="hidden" name="character_id" value="{{ member.id }}">
                        <input type="text" name="nom" placeholder="Nom de l'objet" required>
                        <select name="type" required>
                            <option value="NM">NM</option>
                            <option value="HM">HM</option>
                            <option value="MM">MM</option>
                        </select>
                        <button type="submit">üíæ</button>
                    </form>
                </div>
            {% endif %}

            <button type="button" onclick="toggleLootHistory({{ member.id }})">üì¶ Voir les loots</button>
            <div id="loot-history-{{ member.id }}" style="display: none; margin-top: 5px;">
                {% if member.loots|length > 0 %}
                    <p>üì¶ Loots : {{ member.loots|length }}</p>
                    <ul>
                        {% for loot in member.loots %}
                            <li>{{ loot.nom }} ({{ loot.type }})</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <p><em>Aucun loot enregistr√©.</em></p>
                {% endif %}
            </div>
        </li>
    {% else %}
        <li>Aucun membre dans cette guilde.</li>
    {% endfor %}
</ul>

<p><a href="{{ path('app_dashboard') }}">‚Üê Retour au dashboard</a></p>

<script>
    document.querySelectorAll('.role-select').forEach(select => {
        select.addEventListener('change', () => {
            const memberId = select.dataset.memberId;
            const role = select.value;

            fetch(`/api/v1/character/${memberId}/role`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: new URLSearchParams({ role })
            }).then(res => {
                if (!res.ok) {
                    alert('Erreur lors du changement de r√¥le');
                }
            });
        });
    });

    function toggleLootForm(memberId) {
        const el = document.getElementById('loot-form-' + memberId);
        el.style.display = el.style.display === 'none' ? 'block' : 'none';
    }

    function toggleLootHistory(memberId) {
        const el = document.getElementById('loot-history-' + memberId);
        el.style.display = el.style.display === 'none' ? 'block' : 'none';
    }
</script>
{% endblock %}
